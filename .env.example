# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flower_market
DB_USER=flower_user
DB_PASSWORD=flower_password

# Application
APP_ENV=development
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production

# CORS - comma-separated list of allowed origins, or "*" for all (dev only)
CORS_ORIGINS=*
# For production, use specific origins:
# CORS_ORIGINS=https://flowers.example.com,https://admin.flowers.example.com

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# AI Service (DeepSeek)
# Get API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
AI_ENABLED=false
AI_MAX_ROWS=5000

# Telegram Bot
# Create bot via @BotFather and get token
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=https://your-server/flower/bot/webhook
TELEGRAM_WEBHOOK_SECRET=your-random-32-char-secret
TELEGRAM_INTERNAL_TOKEN=your-random-32-char-internal-token
# Bot mode: "polling" for dev, "webhook" for production
BOT_MODE=polling
# API URL for bot (internal)
API_BASE_URL=http://127.0.0.1:8000